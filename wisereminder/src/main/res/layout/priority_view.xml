<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ioniconview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/popup_round"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/customTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/priority"
            android:textColor="@color/font_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <be.webelite.ion.IconView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFD68080"
                android:textSize="30dp"
                ioniconview:name="ion_flag" />

            <be.webelite.ion.IconView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFCC08E"
                android:textSize="30dp"
                ioniconview:name="ion_flag" />

            <be.webelite.ion.IconView
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FFFEE095"
                android:textSize="30dp"
                ioniconview:name="ion_flag" />

            <be.webelite.ion.IconView
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#FF8A8A8A"
                android:textSize="30dp"
                ioniconview:name="ion_flag" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/arrow_up"
        />
    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@drawable/arrow_down"
        android:layout_below="@+id/main"
        />
</RelativeLayout>