<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ioniconview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <be.webelite.ion.IconView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/common_gray"
        ioniconview:name="ion_ionic"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/txtPropertyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black"
            android:textSize="@dimen/fontSize_subtitle"/>
        <TextView
            android:id="@+id/txtPropertyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/fontSize_body"/>
    </LinearLayout>
</RelativeLayout>