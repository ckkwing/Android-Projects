<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/fontSize_body</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:actionBarStyle">@style/customActionBarStyle</item>
        <!--<item name="android:actionMenuTextColor">@color/font_white</item>-->
        <item name="android:windowBackground">@color/common_black</item> <!--set menu background-->
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab</item>
        <item name="android:textViewStyle">@style/customTextViewStyle</item>
    </style>

    <style name="customActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/frame_main_color</item>
        <item name="android:titleTextStyle">@style/customTitleStyle</item>
    </style>

    <style name="customTitleStyle">
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="customTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fontSize_body</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Fab" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/common_gold</item>
    </style>

    <!--Animation start-->
    <!--<style name="popup_anim_style">-->
        <!--<item name="android:windowEnterAnimation">@anim/anim_fade_in</item>-->
        <!--<item name="android:windowExitAnimation">@anim/anim_fade_out</item>-->
    <!--</style>-->
    <!--Animation end-->

    <style name="createAvatarTheme" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/fontSize_body</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
</resources>
