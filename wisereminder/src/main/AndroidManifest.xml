<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.echen.wisereminder">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name=".Service.MainService"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.echen.wisereminder.MAINSERVICE" />
            </intent-filter>
        </service>
        <receiver
            android:name=".Receiver.BootReceiver"
            android:priority="1000">
            <intent-filter>filterTimeTick
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!--<action android:name="ANDROID.INTENT.ACTION.USER_PRESENT" />-->
                <action android:name="android.intent.action.MAINBROADCAST" />
            </intent-filter>
        </receiver>
        <receiver android:name=".Receiver.HomeKeyEventBroadCastReceiver" />
        <receiver android:name=".Receiver.ScreenBroadcastReceiver" />
        <receiver android:name=".Receiver.TimeTickBroadcastReceiver" />
        <receiver android:name=".Receiver.AlarmReceiver" android:process=":remote">
            <intent-filter>
                <action android:name="android.intent.action.PERIODICALARM" />
            </intent-filter>
        </receiver>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReminderCreationActivity"></activity>
        <activity android:name=".ReminderEditActivity"></activity>
        <activity android:name=".AppNotificationActivity"></activity>
        <activity android:name=".CreateAvatarActivity"></activity>
        <activity android:name=".ImagePreviewActivity"/>
        <activity android:name=".CreateAvatarActivityEX" />
    </application>

    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--<uses-permission android:name="android.permission.RECEIVE_USER_PRESENT" />-->
</manifest>
