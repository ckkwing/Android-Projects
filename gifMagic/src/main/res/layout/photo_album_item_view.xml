<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="wrap_content"
	android:layout_height="wrap_content" android:gravity="center">
	<RelativeLayout android:layout_width="136dp"
		android:layout_height="136dp" android:background="@color/folder_color">
		<ImageView android:id="@+id/one" android:layout_width="64dp"
			android:layout_height="64dp" android:layout_margin="2dp"
			android:background="@drawable/photo_album_bold" />
		<ImageView android:id="@+id/two" android:layout_width="64dp"
			android:layout_height="64dp" android:layout_margin="2dp"
			android:layout_toRightOf="@id/one" android:background="@drawable/photo_album_bold" />
		<ImageView android:id="@+id/three" android:layout_width="64dp"
			android:layout_height="64dp" android:layout_margin="2dp"
			android:layout_below="@id/one" android:background="@drawable/photo_album_bold" />
		<ImageView android:id="@+id/four" android:layout_width="64dp"
			android:layout_height="64dp" android:layout_toRightOf="@id/three"
			android:layout_below="@id/two" android:layout_margin="2dp"
			android:background="@drawable/photo_album_bold" />
		<ImageView android:id="@+id/photo_logo"
			android:layout_width="24dp" android:layout_height="24dp"
			android:layout_margin="2dp" android:layout_alignParentBottom="true"
			android:background="@drawable/photo_logo" android:visibility="invisible" />
		<ImageView android:id="@+id/video_logo"
			android:layout_width="24dp" android:layout_height="24dp"
			android:layout_margin="2dp" android:layout_alignParentBottom="true"
			android:layout_toRightOf="@id/photo_logo" android:background="@drawable/video_logo"
			android:visibility="invisible" />
	</RelativeLayout>
	<TextView android:id="@+id/desc" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
</LinearLayout>